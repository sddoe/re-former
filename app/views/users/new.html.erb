<h1>New User</h1>

<%= form_with model: @user do |form| %>
    <div>
      <%= form.label :email %><br>
      <%= form.text_field :email, placeholder: "example@example.com" %>
    </div>
  
    <div>
      <%= form.label :username, "Your user name here" %><br>
      <%= form.text_field :username %>
    </div>

    <div>
      <%= form.label :password %><br>
      <%= form.password_field :password %>
    </div>  
  
    <div>
      <%= form.submit "Create User" %>
    </div>
<% end %>
